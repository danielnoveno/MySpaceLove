# Production Environment Configuration
# Copy this to .env for production deployment

APP_NAME=SpaceLove
APP_ENV=production
APP_KEY=base64:Snspf1bPZO3e+XXFcFHIxHotjfwucr2uW8bnrrmeoQM=
APP_DEBUG=false
APP_URL=https://your-domain.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# API Keys (Keep these secure!)
GEMINI_API_KEY=your_gemini_api_key
DAILY_API_KEY=your_daily_api_key
DAILY_BASE_URL=https://api.daily.co/v1
GEMINI_MODEL=gemini-2.5-flash

# Broadcasting
BROADCAST_DRIVER=pusher

# Pusher Configuration
PUSHER_APP_ID=myspacelove
PUSHER_APP_KEY=localkey123
PUSHER_APP_SECRET=localsecret123
PUSHER_HOST=127.0.0.1
PUSHER_PORT=6001
PUSHER_SCHEME=http
PUSHER_APP_CLUSTER=mt1

VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Agora
AGORA_APP_ID=your_agora_app_id
AGORA_APP_CERTIFICATE=your_agora_certificate

# Spotify
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI="${APP_URL}/oauth/spotify/callback"
SPOTIFY_SCOPES="user-read-playback-state user-read-recently-played playlist-read-private playlist-modify-private"
SPOTIFY_REFRESH_MARGIN=300

APP_MAINTENANCE_DRIVER=file

# PHP Workers
PHP_CLI_SERVER_WORKERS=4

# Security
BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=your_database_host
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_database_user
DB_PASSWORD=your_database_password

# Session Configuration (OPTIMIZED FOR PRODUCTION)
SESSION_DRIVER=redis
SESSION_LIFETIME=1440
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=your-domain.com
SANCTUM_STATEFUL_DOMAINS=your-domain.com
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax
SESSION_PARTITIONED_COOKIE=false

# Broadcasting & Queue
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

# Cache Configuration (OPTIMIZED FOR PRODUCTION)
CACHE_STORE=redis
CACHE_PREFIX=spacelove-cache-

# Redis Configuration (RECOMMENDED FOR PRODUCTION)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=your_mail_host
MAIL_PORT=465
MAIL_SCHEME=smtps
MAIL_USERNAME=your_mail_username
MAIL_PASSWORD=your_mail_password
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"
SUPPORT_EMAIL="support@your-domain.com"

# AWS (if using S3 for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI="${APP_URL}/auth/google/callback"
GOOGLE_ALLOWED_DOMAIN="your-domain.com"

VITE_APP_NAME="${APP_NAME}"

# Jitsi as a Service (JaaS)
JAAS_APP_ID=your_jaas_app_id
JAAS_API_KEY=your_jaas_api_key
JAAS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----
your_private_key_here
-----END PRIVATE KEY-----
"
